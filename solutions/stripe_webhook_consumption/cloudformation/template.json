{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "REST API.",
    "Resources": {
        "RestApi": {
            "Type": "AWS::ApiGateway::RestApi",
                "Properties": {
                "Name": "stripe_webhooks_api"
            }
        },
        "Get": {
            "Type": "AWS::ApiGateway::Method",
            "Properties": {
                "AuthorizationType": "NONE",
                "HttpMethod": "GET",
                "Integration": {
                    "IntegrationResponses": [
                        {
                            "ResponseTemplates": {
                                "application/json": "Hallo von Brasilien!"
                            },
                            "StatusCode": 200
                        }
                    ],
                    "RequestTemplates": {
                        "application/json": "{\"statusCode\": 200}"
                    },
                    "Type": "MOCK"
                },
                "MethodResponses": [
                    {
                        "ResponseModels": {
                            "application/json": "Empty"
                        },
                        "StatusCode": 200
                    }
                ],
                "ResourceId": {
                    "Fn::GetAtt": [
                        "RestApi",
                        "RootResourceId"
                    ]
                },
                "RestApiId": {
                    "Ref": "RestApi"
                }
            }
        },
        "EventsResource": {
            "Type": "AWS::ApiGateway::Resource",
            "Properties": {
                "RestApiId": {
                    "Ref": "RestApi"
                },
                "ParentId": {
                    "Fn::GetAtt": [
                        "RestApi",
                        "RootResourceId"
                    ]
                },
                "PathPart": "events"
            }
        },
        "EventsFunction": {
            "Type" : "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": "stripe-8fit",
                    "S3Key": "stripe_webhooks_lambda.zip"
                },
                "FunctionName": "stripe_webhooks_lambda",
                "Handler": "event_extractor.handle",
                "Role": {
                    "Fn::Join": [
                        "",
                        [
                            "arn:aws:iam::",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":role/service-role/stripe_webhooks_role"
                        ]
                    ]
                },
                "Runtime": "python3.6",
                "Timeout": "30"
            }
        },
        "EventsGet": {
            "Type": "AWS::ApiGateway::Method",
            "Properties": {
                "AuthorizationType": "NONE",
                "HttpMethod": "GET",
                "Integration": {
                    "IntegrationResponses": [
                        {
                            "ResponseTemplates": {
                                "application/json": "{\"foo\": \"bar\"}"
                            },
                            "StatusCode": 200
                        }
                    ],
                    "RequestTemplates": {
                        "application/json": "{\"statusCode\": 200}"
                    },
                    "Type": "MOCK"
                },
                "MethodResponses": [
                    {
                        "ResponseModels": {
                            "application/json": "Empty"
                        },
                        "StatusCode": 200
                    }
                ],
                "ResourceId": {
                    "Ref": "EventsResource"
                },
                "RestApiId": {
                    "Ref": "RestApi"
                }
            }
        },
        "RestApiDeployment": {
            "Type": "AWS::ApiGateway::Deployment",
            "Properties": {
                "RestApiId": {
                    "Ref": "RestApi"
                },
                "StageName": "dev"
            },
            "DependsOn": [
                "Get"
            ]
        }
    }
}