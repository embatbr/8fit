{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Lambda and API Gateway",
    "Resources": {
        "RestApi": {
            "Type": "AWS::ApiGateway::RestApi",
                "Properties": {
                "Name": "stripe_webhooks_api"
            }
        },
        "Get": {
            "Type": "AWS::ApiGateway::Method",
            "Properties": {
                "AuthorizationType": "NONE",
                "HttpMethod": "GET",
                "Integration": {
                    "IntegrationResponses": [
                        {
                            "ResponseTemplates": {
                                "application/json": "Hallo von Brasilien!"
                            },
                            "StatusCode": 200
                        }
                    ],
                    "RequestTemplates": {
                        "application/json": "{\n    \"statusCode\": 200\n}"
                    },
                    "Type": "MOCK"
                },
                "MethodResponses": [
                    {
                        "ResponseModels": {
                            "application/json": "Empty"
                        },
                        "StatusCode": 200
                    }
                ],
                "ResourceId": {
                    "Fn::GetAtt": [
                        "RestApi",
                        "RootResourceId"
                    ]
                },
                "RestApiId": {
                    "Ref": "RestApi"
                }
            }
        },
        "RestApiDeployment": {
            "Type": "AWS::ApiGateway::Deployment",
            "Properties": {
                "RestApiId": {
                    "Ref": "RestApi"
                },
                "StageName": "dev"
            },
            "DependsOn": [
                "Get"
            ]
        }
    }
}